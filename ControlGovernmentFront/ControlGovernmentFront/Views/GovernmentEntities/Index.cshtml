<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            background-color: rgba(13, 48, 72, 0.9);
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .main {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 300px;
            background-color: rgba(13, 48, 72, 0.9);
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
        }

            .sidebar img {
                width: 70%;
            }

            .sidebar ul {
                width: 100%;
                margin-top: 20px;
                list-style: none;
            }

                .sidebar ul li {
                    margin: 10px 0;
                    color: #fff;
                    cursor: pointer;
                    padding: 15px;
                    border-radius: 5px;
                    width: 100%;
                    font-weight: bold;
                }

                .sidebar ul .active {
                    background-color: #1c3c53;
                }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        nav {
            background-color: rgba(13, 48, 72, 0.9);
            padding: 30px 15px;
            color: #fff;
        }

            nav h1 {
                margin-left: 30px;
            }

        .wrapper {
            flex: 1;
            background-color: rgba(237, 240, 247);
            padding: 30px;
            border-radius: 30px 30px 0 0;
        }

        .content {
            width: 100%;
            border-radius: 30px;
            background-color: #fff;
            height: 100%;
            padding: 3rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        #popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 300px;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            z-index: 1000;
        }

            #popup #validationErrors {
                color: red;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <main class="main">
        <section class="sidebar">
            <img src="~/Assets/logo-sb.svg" alt="Logo" />
            <ul>
                <li>Inicio</li>
            </ul>
        </section>
        <section class="main-content">
            <nav>
                <h1>Registro Gubernamental</h1>
            </nav>
            <section class="wrapper">
                <div class="content">
                    <button id="createBtn">Crear Registro</button>
                    <table border="1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>City</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entity in Model)
                            {
                                <tr>
                                    <td>@entity.Id</td>
                                    <td>@entity.Name</td>
                                    <td>@entity.Type</td>
                                    <td>@entity.City</td>
                                    <td>
                                        <button class="editBtn" data-id="@entity.Id">Edit</button>
                                        <form asp-action="Delete" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@entity.Id" />
                                            <button type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </section>
    </main>


    <div id="popup">
        <form id="form" method="post">
            <input type="hidden" id="Id" name="Id" />
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" required />
            <label for="Type">Type:</label>
            <input type="text" id="Type" name="Type" required />
            <label for="City">City:</label>
            <input type="text" id="City" name="City" required />
            <button type="submit">Save</button>
            <button type="button" id="closeBtn">Cancel</button>
        </form>
        <div id="validationErrors"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            function loadAllRecords() {
                $.get('/GovernmentEntities/GetAll', function (data) {
                    const tbody = $('tbody');
                    tbody.empty(); // Clear the existing table rows

                    data.forEach(function (entity) {
                        const newRow = `
                                <tr>
                                    <td>${entity.id}</td>
                                    <td>${entity.name}</td>
                                    <td>${entity.type}</td>
                                    <td>${entity.city}</td>
                                    <td>
                                        <button class="editBtn" data-id="${entity.id}">Edit</button>
                                        <form asp-action="Delete" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="${entity.id}" />
                                            <button type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>`;
                        tbody.append(newRow);
                    });

                    // Re-bind the edit buttons after loading new records
                    $('.editBtn').on('click', function () {
                        const id = $(this).data('id');
                        $.get(`/GovernmentEntities/Edit/${id}`, function (data) {
                            $('#popup').show();
                            $('#form').attr('action', '@Url.Action("Edit")');
                            $('#Id').val(data.id);
                            $('#Name').val(data.name);
                            $('#Type').val(data.type);
                            $('#City').val(data.city);
                            $('#validationErrors').empty();
                        })
                            .fail(function () {
                                $('#validationErrors').empty();
                                $('#validationErrors').append('<p>An error occurred while fetching data.</p>');
                            });
                    });
                })
                    .fail(function () {
                        $('#validationErrors').empty();
                        $('#validationErrors').append('<p>An error occurred while fetching records.</p>');
                    });
            }

            $('#createBtn').on('click', function () {
                $('#popup').show();
                $('#form').attr('action', '@Url.Action("Create")');
                $('#Id').val('');
                $('#Name').val('');
                $('#Type').val('');
                $('#City').val('');
                $('#validationErrors').empty();
            });

            $('#closeBtn').on('click', function () {
                $('#popup').hide();
            });

            $('#form').on('submit', function (event) {
                event.preventDefault();
                var url = $(this).attr('action');
                var formData = $(this).serialize();

                $.post(url, formData)
                    .done(function () {
                        $('#popup').hide();
                        loadAllRecords(); // Reload all records after successful creation
                    })
                    .fail(function (xhr) {
                        $('#validationErrors').empty();
                        if (xhr.responseJSON && xhr.responseJSON.errors) {
                            for (var key in xhr.responseJSON.errors) {
                                if (xhr.responseJSON.errors.hasOwnProperty(key)) {
                                    $('#validationErrors').append(`<p>${xhr.responseJSON.errors[key]}</p>`);
                                }
                            }
                        } else {
                            $('#validationErrors').append('<p>An error occurred while processing your request.</p>');
                        }
                    });
            });

            // Initial load of records
            loadAllRecords();
        });
    </script>

</body>
</html>
